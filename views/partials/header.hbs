<header>
    <!-- START HEADER -->
    <div class="container">

        <!-- NAVIGATION BAR  -->
        <nav class="navbar fixed-top navbar-expand-lg navbar-light bg-light">
            <!-- LOGO -->
            <a class="navbar-brand" href="/">
                <img class="header-logo" src="images/logo.png" alt="company_logo" />
            </a>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <!-- don't forget # -->
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                <!-- 中央寄せ-->

                <!-- navigation list -->
                <ul class="navbar-nav" id="list">
                    <li class="nav-item"><a class="nav-link" href="#about_link">About us</a></li>
                    <li class="nav-item"><a class="nav-link" href="#promo_link">Promotion</a></li>
                    <li class="nav-item"><a class="nav-link" href="#contact_link">Contact Us</a></li>
                    <li class="nav-item"><a class="nav-link" href="/listing">Room List</a></li>
                </ul>
                <div class="login_signup">
                    <button type="button" class="navbtn btn-info btn-md" id="login_myBtn" data-toggle="modal"
                        data-target="#login_Modal">Log in</button> <!-- (1) data-target -->

                    <button type="button" class="navbtn btn-info btn-md" id="signup_myBtn" data-toggle="modal"
                        data-target="#signup_Modal">Sign up</button> <!-- (2) data-target -->
                </div>
                {{!-- <p>Hello {{username}}</p> --}}
            </div>
        </nav>
    </div>

    <!--- START LOGIN FORM --->

    <!-- log in Modal -->
    <div class="modal fade" id="login_Modal" role="dialog">
        <!-- (1) data-target and id have to be the same name -->
        <div class="modal-dialog">

            <!-- log in Modal content-->
            <div class="modal-content">
                <div class="modal-header modal-header_extend" style="padding:35px 50px;">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4><i class="fas fa-lock"></i> Login </h4>
                </div>
                <div class="modal-body" style="padding:40px 50px;">
                    <form id="login-form" method="POST" class="form-horizontal" action="#" role="form"
                        enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="login_email"> Email </label>
                            <input type="text" class="form-control" id="login_email" placeholder="Enter email" required>
                        </div>
                        <div class="form-group">
                            <label for="psw"> Password </label>
                            <input type="text" class="form-control" id="psw" name="psw" placeholder="Enter password"
                                pattern="[0-9a-fA-F]{6,12}" required>
                            <!--minlength="6" maxlength="12" pattern="^(?=.*[A-Za-z])(?=.*\d)[A-Za-z\d]{6,12}$" -->
                        </div>
                        <div class="form-group form-check">
                            <input class="form-check-input" type="checkbox"> Remember me
                            <label class="form-check-label"></label>
                        </div>
                        <button type="submit" class="btn btn-success btn-block"><span
                                class="glyphicon glyphicon-off"></span> Login </button>
                    </form>
                </div>
                <div class="modal-footer">
                    <div>
                        <button type="submit" class="btn btn-danger btn-default pull-left" data-dismiss="modal"><span
                                class="glyphicon glyphicon-remove"></span> Cancel</button>
                    </div>
                    <div>
                        <p>Not a member? <a href="#">Sign Up</a></p>
                        <p>Forgot<a href="#">Password?</a></p>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <!--- END LOGIN FORM -->


    <!--- START SIGN UP FORM -->

    <!-- sign up Modal -->
    <div class="modal fade" id="signup_Modal" role="dialog">
        <!-- (2) data-target and id have to be the same name -->
        <div class="modal-dialog">

            <!-- sign up Modal content-->
            <div class="modal-content modal-content-size">
                <div class="modal-header modal-header_extend" style="padding:35px 50px;">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4><i class="fas fa-user-plus"></i> Sign up </h4>
                </div>
                <div class="signup_top">
                    <div class="signup_social-media">
                        <a href="#" class="signup-fb btn"><span class="fa fa-facebook"></span>Sign up with Facebook</a>　
                        <a href="#" class="signup-twitter btn"><span class="fa fa-twitter"></span>Sign up with
                            Twitter</a>
                    </div>

                    <p>OR<br>
                        Please fill in this form to create an account.</p>
                    <hr>
                </div>
                <div class="modal-body" style="padding:40px 50px;">
                    <form action="/for-registration" id="signup-form" method="POST" class="form-horizontal" role="form"
                        enctype="application/x-www-form-urlencoded">
                        <div class="form-group">
                            <label for="f_name"> Fist Name </label>
                            <input type="text" class="form-control" id="f_name" name="f_name"
                                placeholder="Enter first name" autocomplete="given-name" required>
                        </div>
                        <div class="form-group">
                            <label for="l_name"> Last Name </label>
                            <input type="text" class="form-control" id="l_name" name="l_name"
                                placeholder="Enter last name" autocomplete="family-name" required>
                        </div>

                        <div class="form-group">
                            <label for="email"> Email Address </label>
                            <input type="text" class="form-control" id="email" name="email"
                                placeholder="Enter email address" required>
                        </div>

                        <div class="form-group">
                            <label for="create-psw"> Password </label>
                            <input type="text" class="form-control" id="create-psw" placeholder="Create Password"
                                pattern="[0-9a-fA-F]{6,12}" required>
                            <small class="form-text text-muted">*6 to 12 characters and the password must have letters
                                and numbers only</small>
                        </div>

                        {{!-- <div class="form-group">
                            <label for="psw-repeat"> Repeat Password
                            </label>
                            <input type="text" class="form-control" id="psw-repeat" placeholder="Repeat Password"
                                required>
                        </div> --}}

                        <p>By creating an account you agree to our <a href="#"
                                style="color:dodgerblue">Terms&Privacy</a>.</p>

                        <button type="submit" class="btn btn-success btn-block"><span
                                class="glyphicon glyphicon-off"></span>
                            Sign up </button>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-danger btn-default pull-left" data-dismiss="modal"><span
                            class="glyphicon glyphicon-remove"></span> Cancel </button>
                    <p>Already A Member? <a href="#"> Log in </a></p>
                </div>
            </div>

        </div>
    </div>
</header> <!-- END HEADER -->