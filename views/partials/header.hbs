<header>
    <!-- START HEADER -->
    <div class="container">

        <!-- NAVIGATION BAR  -->
        <nav class="navbar fixed-top navbar-expand-lg navbar-light bg-light col-lg-12">
            <!-- LOGO -->
            <a class="navbar-brand" href="/">
                <img class="header-logo" src="images/logo.png" alt="company_logo" />
            </a>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <!-- don't forget # -->
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                <!-- 中央寄せ-->

                <!-- navigation list -->
                <ul class="navbar-nav nav nav-pills nav-fill" id="list">
                    <li class="nav-item"><a class="nav-link" href="#about_link">About us</a></li>
                    <li class="nav-item"><a class="nav-link" href="#promo_link">Promotion</a></li>
                    <li class="nav-item"><a class="nav-link" href="#contact_link">Contact Us</a></li>
                    <li class="nav-item"><a class="nav-link" href="/listing">Room List</a></li>
                    {{#if login_user}}
                    <li class="btn btn-outline-success"><a class="nav-link" href="/logout">Log out</a></li>
                    {{else}}
                    <li class="btn btn-outline-success"><a class="nav-link" href="/login">Log in</a></li>
                    {{/if}}
                    <li class="btn btn-outline-success"><a class="nav-link" href="/signup">Sign up</a></li>
                </ul>

                {{!-- <p>Hello {{username}}</p> --}}
            </div>
        </nav>
    </div>


    <!--- START SIGN UP FORM -->

    <!-- sign up Modal -->
    <div class="modal fade" id="signup_Modal" role="dialog">
        <!-- (2) data-target and id have to be the same name -->
        <div class="modal-dialog">

            <!-- sign up Modal content-->
            <div class="modal-content modal-content-size">
                <div class="modal-header modal-header_extend" style="padding:35px 50px;">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4><i class="fas fa-user-plus"></i> Sign up </h4>
                </div>
                <div class="signup_top">
                    <div class="signup_social-media">
                        <a href="#" class="signup-fb btn"><span class="fa fa-facebook"></span>Sign up with Facebook</a>　
                        <a href="#" class="signup-twitter btn"><span class="fa fa-twitter"></span>Sign up with
                            Twitter</a>
                    </div>

                    <p>OR</p>><br>
                    <p>Please fill in this form to create an account.</p>
                    <hr>
                </div>
                <div class="modal-body" style="padding:40px 50px;">
                    <form action="/for-registration" id="signup-form" method="POST" class="form-horizontal" role="form"
                        enctype="application/x-www-form-urlencoded">
                        <div class="form-group">
                            <label for="f_name"> Fist Name </label>
                            <input type="text" class="form-control" id="f_name" name="f_name"
                                placeholder="Enter first name" autocomplete="given-name" required>
                        </div>
                        <div class="form-group">
                            <label for="l_name"> Last Name </label>
                            <input type="text" class="form-control" id="l_name" name="l_name"
                                placeholder="Enter last name" autocomplete="family-name" required>
                        </div>

                        <div class="form-group">
                            <label for="email"> Email Address </label>
                            <input type="text" class="form-control" id="email" name="email"
                                placeholder="Enter email address" required>
                        </div>

                        <div class="form-group">
                            <label for="create_psw"> Password </label>
                            <input type="password" class="form-control" id="create_psw" name="create_psw"
                                placeholder="Create Password" required>
                            {{!-- pattern="[0-9a-fA-F]{6,12}" --}}
                            <small class="form-text text-muted">*6 to 12 characters and the password must have letters
                                and numbers only</small>
                        </div>

                        {{!-- <div class="form-group">
                            <label for="psw-repeat"> Repeat Password
                            </label>
                            <input type="text" class="form-control" id="psw-repeat" placeholder="Repeat Password"
                                required>
                        </div> --}}

                        <p>By creating an account you agree to our <a href="#"
                                style="color:dodgerblue">Terms&Privacy</a>.</p>

                        <button type="submit" class="btn btn-success btn-block"><span
                                class="glyphicon glyphicon-off"></span>
                            Sign up </button>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-danger btn-default pull-left" data-dismiss="modal"><span
                            class="glyphicon glyphicon-remove"></span> Cancel </button>
                    <p>Already A Member? <a href="#"> Log in </a></p>
                </div>
            </div>

        </div>
    </div>
</header> <!-- END HEADER -->